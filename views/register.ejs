
<% include partials/header %>
<link rel="stylesheet" href="stylesheets/register-style.css">
</head>
<body>
<div class="upper-box"></div>
<div class="container main-box">
    <form class="col 12" action="/register" method="POST">
        <div class="row">
            <div class="col s2"></div>
            <div class="input-field col s7">
                <h5>Username</h5>
                <input id="first_name" type="text" class="validate" name="username">
            </div>
            <div class="col s1"></div>
        </div>
        <div class="row">
            <div class="col s2"></div>
            <div class="input-field col s7">
                <h5>Password</h5>
                <input id="password" type="password" class="validate" name="password">
            </div>
        </div>
        <div class="row">
            <div class="col s2"></div>
            <div class="col s7">
                <button class="waves-effect red darken-3 btn-large">Create Account</button>
            </div>
            <div class="col s2"></div>
        </div>
    </form>
    <br>
    <div class="row">
        <div class="col s2"></div>
        <div class="col s7">
            <a class="waves-effect red darken-3 btn button-border" href="/login">LogIn</a>
            <a class="waves-effect red darken-3 btn button-border" href="/logout">LogOut</a>
        </div>
        <div class="col s1"></div>
    </div>
    <br>
</div>
</body>